            android:title="@string/color_title"
            android:defaultValue="#ffffffff" />

         <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="network_status_icons_no_sim_color_dark_mode"
            android:title="@string/color_dark_mode_title"
            android:defaultValue="#99000000" />

	</PreferenceCategory>

    <PreferenceCategory
        android:key="network_status_icons_cat_airplane_mode_colors"
        android:title="@string/network_status_icons_cat_airplane_mode_colors_title">

